<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ElectronicsProductDVActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/ivElecDtlImage"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textStyle="bold"
        android:text="Image Title"
        android:layout_marginTop="10dp"
        android:id="@+id/lblElecDtlTitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textStyle="bold"
        android:text="Color : "
        android:layout_marginTop="10dp"
        android:id="@+id/lblElecDtlColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textStyle="bold"
        android:text="Walmart #: "
        android:layout_marginTop="10dp"
        android:id="@+id/lblElecDtlItemNum"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:text="Item Description : "
        android:layout_marginTop="10dp"
        android:id="@+id/lblElecDtlDesc"/>


</LinearLayout>